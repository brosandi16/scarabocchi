.box {
     width: 300px;
    border: 1px ;
text-align: center;
}

div {
float: left;
margin: 0px;
}    






.container {
  position: relative;
}

.text {
  color: black;
  opacity: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
    font-family: montserrat;
    font-weight: inherit;
      font-size: 32px;

}

.container:hover .image {
  opacity: 0.2;
}

.container:hover .text {
  opacity: 1;
}


#myBtn {
  display: none;
  position: fixed;
  bottom: 20px;
  right: 30px;
  z-index: 99;
  font-size: 18px;
  border: none;
  outline: none;
  background-color: grey;
  color: white;
  cursor: pointer;
  padding: 15px;
  border-radius: 4px;
}

#myBtn:hover {
  background-color: #555;
}







footer {
    grid-area: footer;
    position: relative;
    background-color: white;
      display: block;
}


footer ul {
    padding: 0px;
    display: block;
    width: 240px;
    margin: auto;
    margin-top: 0px;
    display: flex;
    justify-content: center;
      list-style-type: disc;
}

footer li {
      text-align: -webkit-match-parent;
} 

footer a:{
    cursor: pointer;
}

footer p {
    color: black;
    text-align: center;
    font-size: 10px;
    display: flex;
    justify-content: center;
    margin-top: 15px;
}



